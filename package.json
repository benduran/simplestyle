{
  "name": "simplestyle-js",
  "version": "2.7.0-beta.4",
  "description": "An incredibly straightforward and simple CSS-in-JS solution with zero runtime dependencies, and out-of-the-box TypeScript support",
  "main": "./commonjs/index.js",
  "module": "./esm/index.js",
  "esnext": "./esm/index.js",
  "typings": "./commonjs/index.d.ts",
  "types": "./commonjs/index.d.ts",
  "files": [
    "commonjs/",
    "esm/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benduran/simplestyle.git"
  },
  "scripts": {
    "build": "yarn prepbuild",
    "coveralls": "run-s test:coverage coverage:pipe",
    "coverage:pipe": "cat ./coverage/lcov.info | coveralls",
    "prepbuild": "node ./prepBuild.js",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fixall": "eslint './src/**/*.{ts,tsx}' --fix",
    "test:coverage": "jest --coverage",
    "test": "rm -rf ./dist && jest",
    "test:watch": "rm -rf ./dist && jest --watch",
    "prepublishOnly": "yarn build",
    "git-pre-commit": "yarn lint && yarn test"
  },
  "keywords": [
    "CSS-in-JS",
    "CSS",
    "Style",
    "Styled",
    "Simple"
  ],
  "author": "Benjamin Duran <stratodyne@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "11.2.7",
    "@types/autoprefixer": "^10.2.0",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@types/react": ">16.8",
    "@types/react-dom": ">16.8",
    "@zeit/git-hooks": "^0.1.4",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "coveralls": "^3.1.0",
    "eslint-config-react-yas": "1.1.1",
    "fast-glob": "^3.2.5",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "jsdom": "^16.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "react": ">16.8",
    "react-dom": ">16.8",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "csstype": "^3.0.8"
  },
  "peerDependencies": {
    "react": ">16.8"
  }
}
