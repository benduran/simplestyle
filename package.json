{
  "name": "simplestyle-js",
  "version": "5.5.1-alpha.102",
  "description": "An incredibly straightforward and simple CSS-in-JS solution with zero runtime dependencies, and out-of-the-box TypeScript support",
  "type": "module",
  "bin": {
    "ssjs": "./compiler/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benduran/simplestyle.git"
  },
  "files": [
    "dist/**",
    "compiler/**",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bun run build:package",
    "build:package": "bun run --bun ts-duality --noCjs --clean --copyOtherFiles --indexFilesOnly",
    "clean": "rm -rf ./dist",
    "coveralls": "bun run test:coverage && bun run coverage:pipe",
    "coverage:pipe": "cat ./coverage/lcov.info | coveralls",
    "lint": "biome check './src'",
    "lint:fix": "biome check --write './src'",
    "test:coverage": "bun run --bun vitest run --coverage",
    "test": "bun run --bun vitest run",
    "test:watch": "bun run --bun vitest"
  },
  "keywords": [
    "CSS-in-JS",
    "CSS",
    "Style",
    "Styled",
    "Simple"
  ],
  "author": "Benjamin Duran <stratodyne@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "astro": ">=5",
    "@better-builds/lets-version": "^1.6.0",
    "@testing-library/react": "^16.3.2",
    "@types/autoprefixer": "^10.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "@types/minimist": "^1.2.5",
    "@types/yargs": "^17.0.35",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "@biomejs/biome": "^2.3.11",
    "coveralls": "^3.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "react": ">=18",
    "react-dom": ">=18",
    "@better-builds/ts-duality": "^1.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/traverse": "^7.28.6",
    "csstype": "^3.2.3",
    "deepmerge": "^4.3.1",
    "fast-json-stable-stringify": "^2.1.0",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "jiti": "^2.6.1",
    "yargs": "^18.0.0"
  },
  "optionalDependencies": {
    "astro": ">=5",
    "next": ">=15"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "trustedDependencies": [],
  "exports": {
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "default": "./dist/browser/index.mjs"
    },
    "./ssr": {
      "types": "./dist/ssr/index.d.ts",
      "default": "./dist/ssr/index.mjs"
    },
    "./package.json": "./package.json"
  }
}
